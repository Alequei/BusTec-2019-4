<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="70dp"
    android:background="@color/colorPurple"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/dialog_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conductor"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="90dp"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/dialog_placa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_ruta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="ruta1"/>
        <TextView
            android:id="@+id/dialog_ruta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="ruta2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:layout_marginStart="3dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:text="Hora:"/>
        <TextView
            android:id="@+id/dialog_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="48dp"
            android:text="00:00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="Turno:"/>
        <TextView
            android:id="@+id/dialog_turno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="maÃ±ana"/>
    </LinearLayout>
</LinearLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/usuarioconductor"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
</RelativeLayout>