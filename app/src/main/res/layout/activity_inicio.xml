<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/horario2"
    android:layout_height="match_parent"
    tools:context=".Logeo.Inicio">

    <TextView
        android:id="@+id/porcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/procesbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="0%"
        android:textSize="40dp" />

    <ProgressBar
        android:id="@+id/procesbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:outlineSpotShadowColor="@color/colorDark"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp" />

    <ImageView
        android:id="@+id/nav_user_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>